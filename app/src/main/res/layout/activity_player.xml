<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:argType="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="fit"
        app:show_buffering="when_playing"
        app:show_subtitle_button="false"
        app:use_controller="false"
        app:use_artwork="true"
        argType:show_next_button="false" />

    <ImageView
        android:id="@+id/statusImage"
        android:contentDescription="@string/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/loadingText"
        android:visibility="gone"
        style="@style/CustomTextStyleSemiBold16sp"
        android:textColor="@color/black"
        android:background="@drawable/background_radius_10_gray"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:text="@string/preparing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:paddingTop="@dimen/_32sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconHome"
            android:src="@drawable/ic_back_white"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:background="@color/gray_0_1"
            android:contentDescription="@string/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_32sdp" />

        <TextView
            android:id="@+id/videoName"
            style="@style/CustomTextStyleSemiBold16sp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingEnd="@dimen/_10sdp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:background="@color/gray_0_1"
            app:layout_constraintStart_toEndOf="@+id/iconHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iconHome"
            app:layout_constraintBottom_toBottomOf="@+id/iconHome"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomLayout"
        android:visibility="gone"
        android:background="@color/gray_0_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iconRotation"
            android:src="@drawable/icon_rotation"
            android:padding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:contentDescription="@string/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/playerButtons"
            app:layout_constraintTop_toTopOf="@id/playerButtons"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp" />

        <ImageView
            android:id="@+id/iconVolume"
            android:src="@drawable/icon_lock_screen"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:contentDescription="@string/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/playerButtons"
            app:layout_constraintTop_toTopOf="@id/playerButtons"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp" />


        <!-- Control buttons -->
        <LinearLayout
            android:id="@+id/playerButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconVolume"
            app:layout_constraintEnd_toStartOf="@+id/iconRotation"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp">

            <ImageButton
                android:id="@+id/rewind10"
                android:layout_weight="1"
                android:src="@drawable/icon_rewind_10"
                android:contentDescription="@string/imageView"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

            <ImageButton
                android:id="@+id/playPause"
                android:layout_weight="2"
                android:src="@drawable/ic_pause"
                android:contentDescription="@string/imageView"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"/>

            <ImageButton
                android:id="@+id/forward10"
                android:layout_weight="1"
                android:src="@drawable/icon_forward_10"
                android:contentDescription="@string/imageView"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerControls"
            app:layout_constraintBottom_toTopOf="@+id/playerButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/currentTime"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                style="@style/CustomTextStyleMedium"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/seekbarContainer"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"/>

            <TextView
                android:id="@+id/totalTime"
                android:text="00:00"
                android:textColor="@color/white"
                style="@style/CustomTextStyleMedium"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/seekbarContainer"
                android:layout_marginEnd="@dimen/_16sdp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/seekbarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical">


                <View
                    android:id="@+id/firstFloor"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    app:layout_constraintTop_toTopOf="@id/playingSeekbar"
                    app:layout_constraintBottom_toBottomOf="@id/playingSeekbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/background_gray_corner_round"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_5sdp"/>

                <SeekBar
                    android:id="@+id/playingSeekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:max="100"
                    android:progress="0"
                    android:minHeight="@dimen/_5sdp"
                    android:maxHeight="@dimen/_5sdp"
                    android:thumbTint="@color/tab_select"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/secondFloor"
                    app:layout_constraintEnd_toEndOf="@id/firstFloor"
                    android:progressDrawable="@drawable/background_seekbar_track"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_8sdp"/>

                <View
                    android:id="@+id/secondFloor"
                    app:layout_constraintBottom_toBottomOf="@+id/playingSeekbar"
                    app:layout_constraintTop_toTopOf="@+id/playingSeekbar"
                    app:layout_constraintStart_toStartOf="@id/firstFloor"
                    android:background="@drawable/corner_left_bg"
                    android:backgroundTint="@color/tab_select"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
