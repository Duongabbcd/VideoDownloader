<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_32sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/origin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/backIcon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_16sdp"
            android:contentDescription="@string/imageView"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/CustomTextStyleBold20sp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/backIcon"
            app:layout_constraintTop_toTopOf="@id/backIcon"
            app:layout_constraintBottom_toBottomOf="@id/backIcon"
            android:text="WhatsApp"
            android:textColor="@color/ad_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!-- Add an ImageView here -->
        <ImageView
            android:id="@+id/appIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_16sdp"
            android:contentDescription="@string/imageView"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/icon_whatsapp" />

        <LinearLayout
            android:id="@+id/allMediaOptions"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@id/backIcon"
            android:orientation="horizontal"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/imageStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/images_status"
                android:textSize="18sp"
                android:gravity="center"
                style="@style/CustomTextStyleBold20sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/videoStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/videos_status"
                android:textSize="18sp"
                android:gravity="center"
                style="@style/CustomTextStyleBold20sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/savedStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/saved_status"
                android:textSize="18sp"
                android:gravity="center"
                style="@style/CustomTextStyleBold20sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyLayout"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/allMediaOptions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:contentDescription="@string/imageView"
                android:src="@drawable/bottom_navigation_photo"
                android:layout_width="@dimen/_226sdp"
                android:layout_height="@dimen/_50sdp"/>

            <TextView
                android:text="@string/empty_notification"
                style="@style/CustomTextStyleSemiBold14sp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/empty_description"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_14sdp"
                style="@style/CustomTextStyle14sp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/openWhatsAppBtn"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@drawable/background_select_button_100dp"
                android:backgroundTint="#298666"
                android:text="@string/open_whatsapp"
                style="@style/CustomTextStyleSemiBold14sp"
                android:textColor="@color/white"
                android:paddingVertical="@dimen/_16sdp"
                android:paddingHorizontal="@dimen/_32sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <include
            android:id="@+id/noResultLayout"
            android:visibility="gone"
            layout="@layout/no_results" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allStatuses"
            app:layout_constraintTop_toBottomOf="@id/allMediaOptions"
            app:layout_constraintBottom_toTopOf="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toTopOf="@id/frBanner" />

        <include
            android:id="@+id/frBanner"
            layout="@layout/ads_banner"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <include
        android:id="@+id/noInternet"
        layout="@layout/no_internet_connection"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>