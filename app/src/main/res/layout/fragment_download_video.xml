<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/title_textinput"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/title"
                android:paddingStart="@dimen/_10sdp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:paddingEnd="@dimen/_40sdp"
                   />


            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/clearText"
                android:padding="@dimen/_10sdp"
                android:contentDescription="@string/imageView"
                app:layout_constraintEnd_toEndOf="@id/title_textinput"
                app:layout_constraintTop_toTopOf="@id/title_textinput"
                app:layout_constraintBottom_toBottomOf="@id/title_textinput"
                android:src="@drawable/baseline_close_24"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:divider="@drawable/divider_10dp"
            android:showDividers="middle"
            android:baselineAligned="false">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/author_textinput"
                android:visibility="gone"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:hint="@string/author">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/downloadContainer"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:labelFor="@id/container_textview"
                android:hint="@string/container"
                android:paddingEnd="0dp">

                <AutoCompleteTextView
                    android:id="@+id/container_textview"
                    android:layout_width="match_parent"
                    android:textDirection="locale"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    app:simpleItems="@array/audio_containers" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/freespace"
            android:paddingTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="16sp"
            android:textColor="@android:color/tab_indicator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="@string/video_quality" />


        <include
            android:visibility="visible"
            layout="@layout/format_item" />

        <TextView
            android:id="@+id/moreOption"
            android:background="@drawable/background_radius_16_gray"
            android:backgroundTint="@color/tab_select"
            android:text="@string/quality_options"
            style="@style/CustomTextStyleMedium16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allVideoSolutions"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outputPath"
            android:visibility="gone"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/save_dir"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <include
            android:id="@+id/adjust"
            android:visibility="gone"
            layout="@layout/adjust_video" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>