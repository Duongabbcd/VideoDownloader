<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_224sdp"
    android:layout_margin="@dimen/_6sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/customBlack_0_5"
    app:cardCornerRadius="@dimen/_10sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:contentDescription="@string/imageView"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/lastModified"
            android:textColor="@color/white"
            style="@style/CustomTextStyleMedium12sp"
            android:textSize="@dimen/_11sdp"
            android:layout_margin="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/duration"
            style="@style/CustomTextStyleMedium12sp"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/background_duration"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left|start"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="bottom|right|end"
            tools:ignore="RtlHardcoded">


            <ImageView
                android:id="@+id/fabDownload"
                android:contentDescription="@string/imageView"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/icon_download" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_type_video"
            android:contentDescription="@string/imageView"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>