<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/icon_card"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/customBlack_0_5"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/customBlack_0_5"
                    app:layout_constraintEnd_toEndOf="@+id/ad_headline"
                    app:layout_constraintStart_toEndOf="@+id/icon_card"
                    app:layout_constraintTop_toBottomOf="@+id/ad_headline" />

                <View
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/customBlack_0_5"
                    android:lines="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon_card"
                    app:layout_constraintTop_toTopOf="@+id/icon_card" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/tvActionBtnTitle"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_margin="8dp"
            android:background="@color/customBlack_0_5"
            android:backgroundTint="@color/customBlack_0_5"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ad_body"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_card"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>