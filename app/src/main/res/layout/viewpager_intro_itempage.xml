<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layoutDirection="ltr"
    android:textDirection="locale">

    <LinearLayout
        android:id="@+id/topController"
        android:paddingTop="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:gravity="center"
            style="@style/CustomTextStyleSemiBold20sp"
            android:textStyle="italic"
            android:layout_marginHorizontal="@dimen/_45sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_1"/>

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topController"
        app:layout_constraintBottom_toTopOf="@id/bottomControlLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_8sdp"
            android:clipChildren="false"
            android:clipToPadding="false">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/imageView"
                android:src="@drawable/bg_intro2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/disclaimer"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_15sdp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:contentDescription="@string/imageView"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/icon_warning"
                        android:layout_width="@dimen/_44sdp"
                        android:layout_height="@dimen/_44sdp"/>

                    <TextView
                        android:gravity="center"
                        style="@style/CustomTextStyle14sp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/disclaimer_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        style="@style/CustomTextStyle14sp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/disclaimer_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <!-- Bottom Control -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomControlLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/rlNative"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/introIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:contentDescription="@string/imageView"
            android:src="@drawable/icon_intro1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nextBtn"
            style="@style/CustomTextStyleSemiBold16sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginHorizontal="@dimen/_27sdp"
            android:gravity="center"
            android:text="Got it"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/background_radius_22"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/introIcon"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Native Ad Frame -->
    <RelativeLayout
        android:id="@+id/rlNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include
            android:id="@+id/m_loading_view"
            layout="@layout/native_shimmer_small_screen" />

        <FrameLayout
            android:id="@+id/frNative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!-- Fullscreen Ad Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/frNativeFull"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/closeAds"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/icon_gray_round"
            android:contentDescription="@string/imageView"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/baseline_close_24"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
